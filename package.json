{
  "name": "ts-seed",
  "version": "0.0.1",
  "description": "Seed project for TypeScript projects",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "tsc:watch": "tsc -w",
    "build": "npm run clean && npm run compile && npm run copyToDist && npm test -- --coverage && npm run typedoc",
    "buildUpdate": "npm run compile && npm run copyToDist && npm run postbuild",
    "copyToDist": "copyfiles -f *.txt *.md package.json dist",
    "typedoc": "typedoc --exclude **/bin/**/*.ts --exclude **/cli.ts --out ./dist/docs/api ./src",
    "clean": "rimraf ./dist",
    "test": "cross-env JEST_JUNIT_OUTPUT=./dist/test/reports/junit.xml jest",
    "tslint": "tslint -c tslint.json ./src/**/*.ts ./tests/**/*.ts",
    "compile": "tsc && npm run tslint",
    "publish": "npm run build && npm public ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/szikszail/ts-seed.git"
  },
  "keywords": [],
  "author": "Laszlo Szikszai <sziklaszlo@gmail.com>",
  "license": "MIT",
  "files": [
    "*.js",
    "*.d.ts",
    "*.js.map"
  ],
  "engines": {
    "node": ">=6.0.0"
  },
  "bugs": {
    "url": "https://github.com/szikszail/ts-seed/issues"
  },
  "homepage": "https://github.com/szikszail/tsseed#readme",
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.11.3",
    "copyfiles": "^2.1.0",
    "cross-env": "^5.2.0",
    "jest": "^24.5.0",
    "jest-junit": "^6.3.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.0",
    "tslint": "^5.14.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.3333"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "dist"
    ],
    "reporters": [
      "jest-junit"
    ],
    "coverageDirectory": "./dist/test/coverage",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    }
  }
}